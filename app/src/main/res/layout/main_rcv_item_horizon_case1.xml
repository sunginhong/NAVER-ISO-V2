<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_rcv_item_horizon_ccase1"
    android:layout_width="@dimen/main_rcv_item_size"
    android:layout_height="@dimen/main_rcv_item_size"
    android:background="@drawable/rect_main_list_rcv_horizon"
    android:clipChildren="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/main_rcv_item_horizon_case1_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_rcv_item_thumb_size_case1_height"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/main_rcv_item_horizon_case1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/main_rcv_item_horizon_case1_txt_color_t1"
                android:textSize="@dimen/main_rcv_item_horizon_case1_item_size"
                android:lineHeight="21sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>