<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_main_list_rcv_vertical"
    android:clipChildren="true">

    <LinearLayout
        android:id="@+id/rect_main_list_rcv_case_vertical_case1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="13dp"
        android:paddingRight="17dp"
        android:paddingBottom="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_rcv_item_vertical_case1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:lineHeight="21sp"/>

            <TextView
                android:id="@+id/main_rcv_item_vertical_case1_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="7dp"
                android:text="TextView"
                android:textSize="12sp"
                android:lineHeight="14sp"
                android:singleLine="false"
                android:textColor="#A3ABB6" />

        </LinearLayout>

        <ImageView
            android:id="@+id/main_rcv_item_vertical_case1_thumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>